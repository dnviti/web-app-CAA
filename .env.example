# Frontend & Server Configuration
PUBLIC_URL=http://localhost:6542
APP_HOST=0.0.0.0
APP_PORT=6542

# JWT Configuration
JWT_SECRET=xxxxxxxxxxxxxxxxxxxx
# Alternative JWT secret key (for the new JWT implementation)
API_SECRET=your-super-secret-jwt-key-change-this-in-production
# JWT token lifespan in hours
TOKEN_HOUR_LIFESPAN=24

# Trusted proxies for reverse proxy setups (comma-separated)
# Default: 127.0.0.1,::1 (localhost IPv4 and IPv6)
TRUSTED_PROXIES=127.0.0.1,::1

# Database Configuration
# Supported drivers: sqlite, mysql
DB_DRIVER=sqlite

# MySQL Configuration (used when DB_DRIVER=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_USER=webapp_caa
DB_PASSWORD=your_secure_password
DB_NAME=webapp_caa_db
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Local
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# SQLite Configuration (used when DB_DRIVER=sqlite)
DB_SQLITE_DIR=./data
DB_SQLITE_FILE=database.sqlite

# AI Backend Configuration - OpenAI Compatible
BACKEND_TYPE=openai
LLM_HOST=https://your-openwebui-host/api
OPENAI_API_KEY=your-openwebui-key
LLM_MODEL=your-openwebui-model

# AI Backend Configuration - Ollama
# BACKEND_TYPE=ollama
# LLM_HOST=http://ollama-host:11434
# LLM_MODEL=llama3.1:8b

# S3 Configuration for RAG Knowledge Management
# Set S3_ENABLED=true to enable S3 storage for rag_knowledge.json

# Enable/disable S3 storage
S3_ENABLED=false

# AWS S3 Configuration
S3_REGION=us-east-1
S3_BUCKET_NAME=your-caa-bucket
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# Optional: Custom S3 endpoint (for LocalStack, RustFS, etc.)
S3_ENDPOINT=

# Optional: Key prefix for organization (default: "caa")
S3_KEY_PREFIX=caa

# Optional: Force path style (needed for some S3-compatible services like LocalStack)
S3_FORCE_PATH_STYLE=true

# Example for LocalStack (local S3 development):
# S3_ENABLED=true
# S3_REGION=us-east-1
# S3_BUCKET_NAME=caa-bucket
# S3_ACCESS_KEY_ID=test
# S3_SECRET_ACCESS_KEY=test
# S3_ENDPOINT=http://localhost:4566
# S3_KEY_PREFIX=dev
# S3_FORCE_PATH_STYLE=true

# Example for AWS S3:
# S3_ENABLED=true
# S3_REGION=us-west-2
# S3_BUCKET_NAME=my-company-caa-bucket
# S3_ACCESS_KEY_ID=AKIA...
# S3_SECRET_ACCESS_KEY=xxxxx...
# S3_KEY_PREFIX=prod
# S3_FORCE_PATH_STYLE=false

# ===========================================
# DOCKER DEPLOYMENT CONFIGURATION
# ===========================================

# Docker Compose profiles for optional services
# Comma-separated list: mysql,ollama,rustfs
COMPOSE_PROFILES=

# Port configuration for Docker services
MYSQL_PORT=3306
OLLAMA_PORT=11434
RUSTFS_API_PORT=9000
RUSTFS_CONSOLE_PORT=9001

# MySQL Docker container configuration
DB_ROOT_PASSWORD=secure_root_password_change_me

# RustFS Docker container configuration
RUSTFS_ACCESS_KEY=admin
RUSTFS_SECRET_KEY=secure_rustfs_secret_change_me
