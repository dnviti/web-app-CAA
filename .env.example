# Frontend & Server Configuration
PUBLIC_URL=http://localhost:3000
APP_HOST=0.0.0.0
APP_PORT=3000
JWT_SECRET=xxxxxxxxxxxxxxxxxxxx

# Trusted proxies for reverse proxy setups (comma-separated)
# Default: 127.0.0.1,::1 (localhost IPv4 and IPv6)
TRUSTED_PROXIES=127.0.0.1,::1

# Database Configuration
# Supported drivers: sqlite, mysql
DB_DRIVER=sqlite

# MySQL Configuration (used when DB_DRIVER=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_USER=webapp_caa
DB_PASSWORD=your_secure_password
DB_NAME=webapp_caa_db
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Local
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# SQLite Configuration (used when DB_DRIVER=sqlite)
DB_SQLITE_DIR=./data
DB_SQLITE_FILE=database.sqlite

# AI Backend Configuration - OpenAI Compatible
BACKEND_TYPE=openai
LLM_HOST=https://your-openwebui-host/api
OPENAI_API_KEY=your-openwebui-key
LLM_MODEL=your-openwebui-model

