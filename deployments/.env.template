# Docker Compose Environment Variables
# Copy this file to .env and customize as needed

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Which services to enable (comma-separated profiles)
# Options: mysql, ollama, rustfs
# Example: COMPOSE_PROFILES=mysql,ollama
COMPOSE_PROFILES=

# ===========================================
# PORT CONFIGURATION
# ===========================================

# Application port
APP_PORT=6542

# MySQL port (when using mysql profile)
MYSQL_PORT=3306

# Ollama port (when using ollama profile) 
OLLAMA_PORT=11434

# RustFS ports (when using rustfs profile)
RUSTFS_API_PORT=9000
RUSTFS_CONSOLE_PORT=9001

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# MySQL configuration (for mysql profile)
DB_NAME=caa_database
DB_USER=caa
DB_PASSWORD=secure_password_change_me
DB_ROOT_PASSWORD=secure_root_password_change_me

# ===========================================
# AI CONFIGURATION
# ===========================================

# Ollama model to use (when using ollama profile)
OLLAMA_MODEL=llama3.1:8b

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# RustFS configuration (for rustfs profile)
RUSTFS_ACCESS_KEY=admin
RUSTFS_SECRET_KEY=secure_secret_change_me

# ===========================================
# RESOURCE LIMITS (Production)
# ===========================================

# Memory limits for production deployment
WEB_APP_MEMORY_LIMIT=512m
WEB_APP_MEMORY_RESERVATION=256m

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log driver and rotation settings
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3
